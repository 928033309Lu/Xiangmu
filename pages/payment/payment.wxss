/* pages/payment/payment.wxss */
.dingdanbox{background:#F2F2F2;position:relative;height:850rpx;}
.dingdanbox .shouhuo{
  background: #fff;
  font-size: 28rpx;
  padding: 20rpx;
  display: flex;
}
.null{background:#F2F2F2;height:25rpx;}
.dingdan_bt{
  height:100rpx;
  line-height:100rpx;
  font-size:30rpx;
  background:#fff;
  display:flex;
  /* margin-top:50rpx; */
  justify-content:space-between;
}
.dingdan_btdiv1{
  width:50%;
  display:flex;
  padding-left:30rpx;
  }
.dingdan_btdiv1 .add{
  margin-top:5px;
  background:#2F83FA;
  width:70rpx;
  height:70rpx;
  line-height:60rpx;
  text-align:center;
  color:#fff;
  font-size:70rpx;
  border-radius:10rpx;
  margin-right:30rpx;
}
.dingdan_btdiv2{width:7%;}
.bottomline{position:absolute;top:85rpx;}
.bottomline image{height:2rpx;}
.shangpinlist .shangpinbt{
  height:100rpx;
  line-height:100rpx;
  font-size:30rpx;
  padding-left:30rpx;
  background:#fff;
  border-bottom:1px solid #ccc;
}
.shangpintu{
  display:flex;
  justify-content:space-between;
  padding:30rpx;
  font-size:30rpx;
  background:#fff;
}
.spimg{width:30%;}
.spimg image{width:100%;height:200rpx;}
.sptxt1{padding-left:20rpx;width:50%;}
.sptxt2{width:20%;text-align:center;}
.sptxt{padding-top:100rpx;color:#979797;}
.shop_title{
  height:80rpx;
  margin-top:25rpx;
  line-height:80rpx;
  font-size:30rpx;
  background:#fff;
  display:flex;
  justify-content:space-between;
  padding:0 30rpx;
  border-bottom:1px solid #ccc;
}
.bianji{color:#7A7A7A;}
.beizhu{
  height:90rpx;
  line-height:90rpx;
  font-size:30rpx;
  background:#fff;
  display:flex;
  justify-content:space-between;
  border-bottom:1px solid #ccc;
  padding-left:30rpx;
  margin-bottom:50rpx;
}
.beizhu input{width:80%;height:90rpx;}

/* 订单页脚 */
.shop_footer{
  width:100%;
  border:2rpx solid #ECECEC;
  height:100rpx;
  line-height:100rpx;
  position:fixed;
  bottom:0rpx;
  display:flex;
  font-size:30rpx;
}
.shop_footer .footer1{
  width:25%;
  font-weight:bold;
  padding-left:30rpx;
}
.shop_footer .footer2{
  width:40%;
  color:#E6433E;
  font-weight:bold;
  text-align:center;
}
.shop_footer .footer3{width:35%;}
.footer3 button{background:#E6433E;color:#fff;border-radius:0;height:100rpx;font-size:33rpx;line-height:100rpx;}

.cols{
  margin-top: 20rpx;
  color: red;
}
.sizes{
  color: red;
}
