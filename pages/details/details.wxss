/* pages/details/details.wxss */
@import "../../wxParse/wxParse.wxss";
.titlehead{
  background: #fff;
  position: relative;
  padding: 10rpx 10rpx 0 20rpx;
  font-size: 30rpx;
  
}

.titlehead>view{
  margin: 16rpx 0 26rpx 0;
}
.titlehead>view:nth-of-type(3){
  display: flex;
}
.titlehead>view:nth-of-type(3)>view{
  flex: 1;
}
.titlehead .tu{
  text-align: center;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.titlehead .btnshare{
  width: 100rpx;
	height: 140rpx;	
  line-height: 140rpx;
	opacity:0;
  z-index: 100;
  padding: 0;
  margin: 0;
	position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.titlehead .tu>view{
  font-size: 24rpx;
}

.yaoqing{
  background: #F7F7FA;
  padding: 10rpx 0;
}
.yaoqing>view{
  background: #fff;
  font-size: 28rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.xiangbox{
  padding-bottom:200rpx;
  height: 100%;
  position: relative;
  }
/* 详情页大图 */
.xiang_tu{padding:0 100rpx;}
.xiang_tu image{
  height:600rpx;
  width:100%;
}

/* 商品介绍 */
.introducebox{
  background: #F7F7FA;
  padding-bottom:30rpx;
  }
.introduce{
  background:#fff;
  padding-left:30rpx;
  font-size:30rpx;
  height:70rpx;
  line-height:70rpx;
}
.introduce_shop{
  background:#fff;
}
.introduce_shop .shop_txt{font-size:27rpx;}
.shop_img{
    width:95%;
    margin-left:2.5%;
}
.shop_img image{
  width:100%;
  height:700rpx;
}
/* 大家评价 */
.evaluate{
  background:#fff;
  margin-top:30rpx;
}
.evaluatebt{
  padding-left:30rpx;
  font-size:28rpx;
  height:70rpx;
  line-height:70rpx;
  border-bottom:1px solid #F0EDF1;
}
.btnum{color:#E2100D;padding-left:10rpx;}
.pinglunlist{
  display:flex;
  position:relative;
  padding:10rpx;
}
.haoping{
  background:#fff;
  height:80rpx;
  line-height:80rpx;
  font-size:28rpx;
  padding-left:40rpx;
}
.pinglunlist .ui1{
    width:50%;
}
.pinglunlist .ul1 image{
  height:130rpx;
  width:130rpx;
  padding-right:30rpx;
}
.pinglunlist .ul2{
  width:100%;
  font-size:26rpx;
  margin-top:20rpx;
  border-bottom:1px solid #ccc;
  }
  .pltxt2{margin-top:20rpx;color:#949494;font-size:25rpx;}

/* 页脚 */
.footer{
  width:100%;
  height:100rpx;
  background:#fff;
  position:fixed;
  bottom:0rpx; 
  display:flex;  
  text-align:center;           
}
.footer .foot_ul1{
  width:20%;
  font-size:20rpx;
  padding-top:10rpx;
  color:#008000;
}
.footer .foot_ul1 image{width:50rpx;height:50rpx;}
.footer .foot_ul2{
  width:20%;
  font-size:20rpx;
  padding-top:10rpx;
  position:relative;
}
.footer .foot_ul2 .shopnum{
  border: none;
  position:absolute;
  top:-30rpx;
  right:10rpx;
  color:#E2100D;}
.footer .foot_ul2 image{width:50rpx;height:50rpx;}
.footer .foot_ul3{width:30%;font-size:20rpx;}
.footer .foot_ul3 button{
  background:orange;color:#fff;height:100%;border-radius:0;
  font-size:30rpx;line-height:100rpx;
  }
.footer .foot_ul4{width:30%;}
.footer .foot_ul4 button{
  background:#E2100D;
  color:#fff;
  height:100%;
  border-radius:0;
  font-size:30rpx;
  line-height:100rpx;
  }


.zhezhao{
  position: fixed;
  z-index: 555;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.maskbox{
  width: 100%;
  position: absolute;
  bottom: 0;
  background:#F6F8F8;
}
/* 遮罩标题 */
.maskbox .mask_title{
  border-bottom:1px solid #f1f1f1;
  display:flex;
  position:relative;
}
.fork{
  width:40rpx;
  height:40rpx;
  font-size:25rpx;
  line-height:40rpx;
  border:1px solid #BEC0C1;
  text-align:center;
  border-radius:40rpx;
  position:absolute;
  background:#f1f1f1;
  color:#BEC0C1;
  right:10rpx;
  top:10rpx;
}
.mask_img{width:30%;padding:20rpx;}
.mask_img image{width:100%;height:180rpx;border-radius:15rpx;}
.mask_txt{width:70%;padding-top:40rpx;}
.mask_txt .masktxt1{font-size:27rpx;padding-bottom:20rpx;}
.mask_txt .masktxt2{font-size:25rpx;font-weight:bold;color:#CE2A1C;}
/* 颜色 尺码*/
.mask_color{
  padding:20rpx;
}
.mask_col_bt{font-size:30rpx;padding-bottom:5rpx;}
.mask_color_div{display:flex;font-size:25rpx;padding-left:30rpx;flex-wrap:wrap;}
.mask_color_div>view{
  border:1px solid #757370;
  padding:7rpx;
  border-radius:10rpx;
  color:#757370;
  margin:10rpx 0rpx 10rpx 20rpx;
}
/* 购买数量 */
.mask_shop{
  height:100rpx;
  line-height:100rpx;
  display:flex;
  justify-content:space-between;
}
.shoptxe{font-size:30rpx;width:30%;padding-left:50rpx;}
.shopbtn{font-size:30rpx;width:30%;display:flex;padding-right:30rpx;}
.shopbtn button{
  padding:0;
  margin:0;
  width:25%;
  height:40rpx;
  line-height:40rpx;
  margin-top:30rpx;
  background:#fff;
  border:1px solid #000;
  font-size:27rpx;
}
.shopnum{
  font-size:27rpx;
  margin:0 10rpx;
  border:1px solid #000;
  height:37rpx;
  margin-top:30rpx;
  width:25%;
  text-align:center;
  line-height:37rpx;
  border-radius:10rpx;
}
/* 加入购物车 */
.maskadd{
  background:#0F9615;
  color:#fff;
  font-size:30rpx;
  border-radius:0;
  margin:20rpx;
}

#detail .activeCol{
  color: red;
  border: 1px solid red;
}

