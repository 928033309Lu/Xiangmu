/* pages/face/face.wxss */
.shouyebox{
  background:rgba(244, 244, 244);
}
.shouyebox .sy_top{
  height:400rpx;
  background:#67C3A9;
  position:relative;
}
.shouyebox .sy_top .title{
  width:70%;
  height:170rpx;
  position:absolute;
  top:30rpx;
  left:17%;
  }

.shouyebox .sy_top .sidai1{
    width:100%;
    height:170rpx;
    border-radius:20%;
    position:absolute;
    top:300rpx;
    left:0;
    opacity: 0.6;
    z-index:1;
}
.shouyebox .sy_top .sidai2{
    width:100%;
    border-radius:5%;
    height:830rpx;
    position:absolute;
    top:50rpx;
    left:0;
    background-size:100% 100%;
    opacity: 0.6;
}
.shouyebox .text{text-align:center;padding-top:50rpx;}
.shouyebox .text_img{
  width:90%;
  height:270rpx;
  margin:0 auto;
  }
.shouyebox .store button{
  width:70%;
  height:90rpx;
  line-height:90rpx;
  background:#4AB698;
  border-radius:50rpx;
  color:#fff;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  position: absolute;
  z-index: 11;
  left: 50%;
  bottom: -10rpx;
  margin-left: -64rpx;
  animation: userInfo 6s linear infinite;
}

@keyframes userInfo{
  0%{
    transform: translateY(0rpx) rotate(0deg)
  }
  20%{
    transform: translateY(-30rpx) rotate(45deg)
  }
  40%{
    transform: translateY(0rpx) rotate(0deg)
  }
  80%{
    transform: translateY(-30rpx) rotate(-45deg)
  }
  100%{
    transform: translateY(0rpx) rotate(0deg)
  }
}

@keyframes move_wave {
  0% {
    transform: translateX(0) translateZ(0) scaleY(1);
  }

  50% {
    transform: translateX(-25%) translateZ(0) scaleY(1);
  }

  100% {
    transform: translateX(-50%) translateZ(0) scaleY(1);
  }
}

.waveWrapper {
  position: absolute;
  bottom: 0;
  height: 50rpx;
  width: 100%;
}
.waveWrapperInner {
  position: absolute;
  width: 100%;
  overflow: hidden;
  height: 100%;
  bottom: -1px;
}
.bgTop {
  z-index: 15;
  opacity: 0.5;
  height: 24px;
}
.bgMiddle {
  z-index: 10;
  opacity: 0.75;
  height: 19px;
}
.bgBottom {
  z-index: 5;
  height: 14px;
}
.wave {
  position: absolute;
  left: 0;
  width: 2160px;
  height: 100%;
  background-repeat: repeat no-repeat;
  background-position: 0 bottom;
  transform-origin: center bottom;
}
.wave image {
  width: 100%;
  position: absolute;
  bottom: 0;
}
.waveTop {
  background-size: 540px 25px;
}
.waveAnimation .waveTop {
  animation: move_wave 30s linear infinite;
}
.waveMiddle {
  background-size: 1080px 20px;
}
.waveAnimation .waveMiddle {
  animation: move_wave 24s linear infinite;
}
.waveBottom {
  background-size: 540px 15px;
}
.waveAnimation .waveBottom {
  animation: move_wave 12s linear infinite;
}
