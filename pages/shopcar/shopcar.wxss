/* pages/shopcar/shopcar.wxss */
.shop_title{
  height:70rpx;
  line-height:70rpx;
  font-size:30rpx;
  background:#F2F2F2;
  display:flex;
  justify-content:space-between;
  padding:0 30rpx;
}
.bianji{
  color: red;
}
.wancheng{
  color: rgb(49, 226, 73);
}
/* 购物车列表 */
.shop_list{
  padding-bottom:40rpx;
  border-bottom:1px solid #ECECEC;
  padding-top:20rpx;
}
.shop_car{
  height:200rpx;
  padding-top:20rpx;
  /* border:1px solid red; */
  width:100%;
  display:flex;
  font-size:30rpx;
}
.shop_cardiv1{
  width:15%;
  text-align:center;
  padding-left:10rpx;
  padding-top:80rpx;
}
.shop_cardiv2{
  width:30%;
}
.shop_cardiv2 image{width:100%;height:200rpx;}
.shop_cardiv3{
  width:33%;
  padding-left:30rpx;
}
.div3txt1{
  padding-bottom:10rpx;
  font-weight:bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.div3txt2{color:#E6433E;}
.shop_cardiv4{
  width:23%;
  display:flex;
  padding-top:140rpx;
  padding-right:20rpx;
}
.shop_cardiv4 button{
    padding:0;
    margin:0;
    width:50rpx;
    height:60rpx;
    text-align:center;
    border-radius:0rpx;
    line-height:60rpx;
    font-size:30rpx;
    /* border:1px solid #ccc; */
}
.div4num{
    width:60rpx;
    height:55rpx;
    text-align:center;
    border-radius:0rpx;
    line-height:60rpx;
    font-size:30rpx;
    border:1px solid #ccc;
}
/* 购物车页脚 */
.shop_footer{
  width:100%;
  border:2rpx solid #ECECEC;
  height:100rpx;
  line-height:100rpx;
  position:fixed;
  bottom:0rpx;
  font-size:30rpx;
  display:flex;
  justify-content: space-between;
}
.shop_footer .footer1{
  
  font-weight:bold;
  padding-left:30rpx;
}
.shop_footer .footer2{
  color:#E6433E;
  font-weight:bold;
  text-align:center;
}

.footer3 button{
  color:#fff;
  border-radius:0;
  height:100rpx;
  font-size:33rpx;
  line-height:100rpx;
  width: 260rpx;
}

.btn1{
  background:#E6433E;
}
.btn2{
  background:rgb(49, 226, 73);
}